<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <ImageView
        android:id="@+id/img_donate"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/orange_bg">
        <EditText
            android:id="@+id/edt_donate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:hint="Donate"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="start|center"
            android:enabled="false"
            android:padding="4dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Favorite Charities"
        android:textColor="@color/theme_color_orange"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:background="@drawable/orange_bg">
        <EditText
            android:id="@+id/edt_charity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:hint="Favorite Charities"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="start|center"
            android:enabled="false"
            android:padding="4dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Address for cheques"
        android:textColor="@color/theme_color_orange"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:background="@drawable/orange_bg">
        <EditText
            android:id="@+id/edt_adrs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:hint="Address for cheques"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="start|center"
            android:enabled="false"
            android:padding="4dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Paypal account"
        android:textColor="@color/theme_color_orange"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:background="@drawable/orange_bg">
        <EditText
            android:id="@+id/edt_paypal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:hint="Paypal Account"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:gravity="start|center"
            android:padding="4dp"
            />
    </RelativeLayout>

</LinearLayout>
</ScrollView>