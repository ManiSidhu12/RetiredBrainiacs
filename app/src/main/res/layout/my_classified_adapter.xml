<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white">
<ImageView
    android:id="@+id/img_my_classified"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/postimg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_color"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
       >
        <RelativeLayout
            android:id="@+id/lay_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:background="@android:color/white"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_centerInParent="true"
            android:tint="@color/classified_selector"
            android:src="@drawable/myclassified"/>



        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_edit"
            android:layout_centerInParent="true"
            android:layout_marginStart="7dp"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="Edit"
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="@color/classified_selector"
            />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_color"/>
        <RelativeLayout
            android:id="@+id/lay_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:background="@android:color/white"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_centerInParent="true"
                android:tint="@color/classified_selector"
                android:src="@drawable/myclassified"/>



            <TextView
                android:id="@+id/txt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_delete"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:padding="3dp"
                android:textSize="16sp"
                android:text="Delete"
                android:gravity="center"
                android:ellipsize="end"
                android:textColor="@color/classified_selector"
                />
        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_color"/>
</LinearLayout>