<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/img_user_friend"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/img_user_friend"
        android:layout_toStartOf="@+id/lay_request"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/txt_name_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="3dp"
            android:paddingTop="3dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Jasper Shintu"/>
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rate_bar_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:srb_fillColor="#f39c12"
            app:srb_borderColor="#f39c12"
            app:srb_pressedFillColor="#f39c12"
            app:srb_rating="4"
            app:srb_isIndicator="true"
            app:srb_pressedBorderColor="#808080"
            app:srb_starSize="14dp"
            />
        <LinearLayout
            android:id="@+id/lay_btns"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <Button
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginEnd="20dp"
                android:background="@drawable/green_bg"
                />
            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Reject"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/memo_btn_bg"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>