<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

        <android.support.v7.widget.CardView
            android:id="@+id/lay_srch_store"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_srch_store"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:src="@android:drawable/ic_menu_search"/>
                <EditText
                    android:id="@+id/edt_srch_store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img_srch_store"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:hint="Search"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:id="@+id/img_msg_store"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/forum"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_store"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:background="@android:color/white"
            app:tabIndicatorColor="@android:color/transparent"
            android:layout_height="wrap_content"/>


<FrameLayout
    android:id="@+id/frame_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
></FrameLayout>

