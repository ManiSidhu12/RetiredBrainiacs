<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:background="#F5F5F5"
  >
<RelativeLayout
    android:id="@+id/lay_name"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:background="#F5F5F5"
    >
    <ImageView
        android:id="@+id/img_chk"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
       android:src="@drawable/sel"/>

    <TextView
        android:id="@+id/txt_subcat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_chk"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:gravity="left|center"
        android:textColor="#555555"
        android:padding="5dp" />
    <EditText
        android:id="@+id/edt_add"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_toEndOf="@+id/txt_subcat_name"
        android:layout_toStartOf="@+id/next"
        android:layout_centerInParent="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:hint="Other(Please specify)"
        android:background="@drawable/cmnt_bg"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:inputType="textCapSentences"
        android:singleLine="true"
        >

    </EditText>
    <ImageView
        android:id="@+id/next"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="7dp"
        android:src="@drawable/nxt"/>

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay_name"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" />
</RelativeLayout>