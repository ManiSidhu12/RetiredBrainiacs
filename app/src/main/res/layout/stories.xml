<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="rffg"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/theme_color_orange"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/orange_bg">
        <TextView
            android:id="@+id/txtdob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:hint="Date of birth"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="start|center"
            android:padding="4dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/orange_bg">
            <TextView
                android:id="@+id/txtend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:hint="Date of retire"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:padding="4dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/orange_bg">
            <EditText
                android:id="@+id/edt_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:hint="Text here.."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:enabled="false"
                android:padding="4dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/orange_bg">
            <EditText
                android:id="@+id/edt_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:hint="Text here..."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:enabled="false"
                android:padding="4dp"
                />
        </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    android:text="If you have a story that you would like to share please send it to us via our contact page"
    android:textSize="16sp"
    android:gravity="center"
    android:textColor="@color/theme_color_orange"/>
        <Button
            android:id="@+id/btn_contact"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@color/theme_color_orange"
            android:text="Contact"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</ScrollView>