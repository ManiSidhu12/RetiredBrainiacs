<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/theme_color_orange">
<RelativeLayout
    android:id="@+id/backLay"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_centerInParent="true">
        <Button
            android:id="@+id/dismiss"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/back"
            android:backgroundTint="@android:color/white"/>
        <TextView
            android:id="@+id/name_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/dismiss"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="7dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Back"/>
</RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lay_likes_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
     android:layout_below="@+id/toplay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/lay_like_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="7dp"
            >
            <ImageView
                android:id="@+id/img_like_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/like"/>
            <TextView
                android:id="@+id/txt_like_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Like"
                android:gravity="center"
                android:textColor="@color/post_color"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txt_like_count_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:textColor="@color/post_color"
                android:textSize="14sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_cmnt_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            >
            <ImageView
                android:id="@+id/img_cmnt_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/cmnt"/>
            <TextView
                android:id="@+id/txt_cmnt_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Comment"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:textColor="@color/post_color"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/txt_cmnt_count_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:textColor="@color/post_color"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cmnts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_likes_detail"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:layout_above="@+id/lay_cmnts"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/lay_cmnts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
      >
        <Button
            android:id="@+id/btn_post"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Post"
            android:background="@color/post_color"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btn_post"
            android:background="@drawable/cmnt_bg"
            android:layout_toEndOf="@+id/img">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp">
            <EditText
                android:id="@+id/edt_cmnt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:hint="Write a comment"
                android:padding="2dp"
                android:gravity="start|center"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>