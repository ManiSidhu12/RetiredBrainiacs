<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/img_user_forum"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_user_forum"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/txt_name_forum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="3dp"
                android:paddingTop="3dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Jasper Shintu"/>
            <TextView
                android:id="@+id/txt_time_forum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:paddingStart="3dp"
                android:text="23 minutes ago"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/rate_bar_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="3dp"
                    app:srb_fillColor="#f39c12"
                    app:srb_isIndicator="true"
                    app:srb_rating="3.5"
                    app:srb_borderColor="#f39c12"
                    app:srb_pressedFillColor="#f39c12"
                    app:srb_pressedBorderColor="#808080"
                    app:srb_starSize="13dp"
                    />
                <TextView
                    android:id="@+id/txt_rating_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate_bar_forum"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:text="4.5/5"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_post_forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:textSize="16sp"
        android:text="Discoveries in History"
       android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/txt_data_forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:textSize="14sp"
        android:text="Modern view on roots of religions and states"
     />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">
        <LinearLayout
            android:id="@+id/lay_reply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:src="@drawable/reply"/>
            <TextView
                android:id="@+id/txt_reply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Reply"
                android:gravity="center"
                android:textColor="@color/post_color"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            >
            <ImageView
                android:id="@+id/img_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/view"/>
            <TextView
                android:id="@+id/txt_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:textColor="@color/post_color"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>