<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutfeed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_user_feed"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img_user_feed"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:text="Jasper Shintu"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:paddingStart="3dp"
        android:singleLine="true"
        android:text="23 minutes ago"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
    <RelativeLayout
        android:id="@+id/rightLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
   android:layout_toEndOf="@+id/txt_time"
        android:layout_marginStart="3dp"
        android:layout_centerInParent="true">


    <LinearLayout
        android:id="@+id/lay_actions"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@+id/lay_settings"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/spin_bg">

        <Spinner
            android:id="@+id/spin_actions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_settings"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:background="@drawable/spin_bg">

        <Spinner
            android:id="@+id/spin_privacy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"></Spinner>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
               >

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/rate_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="3dp"
                    app:srb_borderColor="#f39c12"
                    app:srb_fillColor="#f39c12"
                    app:srb_isIndicator="true"
                    app:srb_pressedBorderColor="#808080"
                    app:srb_pressedFillColor="#f39c12"
                    app:srb_rating="5"
                    app:srb_starSize="13dp" />

                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/rate_bar"
                    android:text="4.5/5"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="Lorem ipsum is a dummy text standard for typesettings."
        android:textColor="@color/create_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more..."
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
          />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play"

            android:visibility="gone" />

    </RelativeLayout>

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lay_likes"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/txt_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="Like"
                android:textColor="@color/post_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/post_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_cmnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_cmnt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/cmnt" />

            <TextView
                android:id="@+id/txt_cmnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="Comment"
                android:textColor="@color/post_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_cmnt_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/post_color"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_cmnts"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/btn_post"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:background="@color/post_color"
            android:text="Post"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/btn_post"
            android:background="@drawable/cmnt_bg">

            <TextView
                android:id="@+id/edt_cmnt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="3dp"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:hint="Write a comment"
                android:padding="2dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>