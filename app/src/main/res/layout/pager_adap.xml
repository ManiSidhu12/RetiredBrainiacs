<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/lay_main_pager"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_all_post"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/imageclass"
        android:layout_marginEnd="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp">
        <TextView
            android:id="@+id/txt_classifi_post_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/txt_classifi_post_time"
            android:layout_marginEnd="5dp"
            android:text=""
            android:gravity="start|center"
            android:textSize="16sp"
            android:padding="3dp"
            android:maxLines="2"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txt_classifi_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="2dp"
            android:text="23 minutes ago"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="3dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_classifi_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:gravity="start|center"
        android:textSize="14sp"
        android:padding="4dp"
        android:textColor="@android:color/black"/>

</LinearLayout>