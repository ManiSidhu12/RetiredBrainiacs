<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_detail">
    <RelativeLayout
        android:id="@+id/imgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/audio_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play"
            android:visibility="gone" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/audioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:id="@+id/btnPlay"
                android:src="@drawable/play1"
                />
            <TextView
                android:id="@+id/currentpos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/btnPlay"
                android:layout_marginStart="12dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:gravity="start|center"
                android:text="0:0"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/totalduration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/currentpos"
                android:layout_centerInParent="true"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:gravity="start|center"
                android:textColor="@android:color/black"/>
            <SeekBar
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/totalduration"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/seekBar"
                android:layout_weight="2" />

        </RelativeLayout>

    </RelativeLayout>
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="start|center"
        android:padding="4dp"
        android:layout_below="@+id/layout_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/youtuubelay"
        android:visibility="gone">
        <ImageView
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="7dp"
            android:src="@drawable/addicon"/>

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/cmnt_bg">

            <EditText
                android:id="@+id/edt_youtube_url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter youtube URL"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                android:gravity="start|center"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:padding="2dp"
                android:layout_marginBottom="7dp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:background="@color/background_color"/>
        <RelativeLayout
            android:id="@+id/layy"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/v"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/cmnt_bg">
        <EditText
            android:id="@+id/edt_archive_desc1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Enter Description"
            android:textColor="@color/black"
            android:gravity="top|start"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="7dp"

            android:padding="2dp"
            android:background="@android:color/transparent"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:background="@color/background_color"/>
    </RelativeLayout>

    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
      android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-15dp"
        android:visibility="gone"
        android:background="@drawable/close"/>
</RelativeLayout>