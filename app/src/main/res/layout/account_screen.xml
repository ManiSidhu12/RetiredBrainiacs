<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp">
    <ImageView
        android:id="@+id/img_user_account"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dummyuser"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/img_user_account"
        android:layout_toStartOf="@+id/btn_edit"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/txt_name_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text=""/>
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rate_bar_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            app:srb_fillColor="#f39c12"
            app:srb_borderColor="#f39c12"
            app:srb_pressedFillColor="#f39c12"
            app:srb_isIndicator="true"
            app:srb_rating="5"
            app:srb_pressedBorderColor="#808080"
            app:srb_starSize="15dp"
            />

    </LinearLayout>
<Button
    android:id="@+id/btn_edit"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_alignParentEnd="true"
    android:layout_centerInParent="true"
    android:background="@drawable/edit"
    android:layout_marginEnd="3dp"/>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            <RelativeLayout
                android:id="@+id/lay_chng_pswd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_chng_pswd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/lock" />

                <TextView
                    android:id="@+id/txt_chng_pswd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/img_chng_pswd"
                    android:layout_toStartOf="@+id/img_chng_pswd_nxt"
                    android:gravity="start|center"
                    android:padding="4dp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                     />
                <ImageView
                    android:id="@+id/img_chng_pswd_nxt"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/nxt" />
            </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="7dp"
    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_suggestion"
                        android:layout_width="27dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/suggestions" />

                    <TextView
                        android:id="@+id/txt_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="14dp"
                        android:layout_toEndOf="@+id/img_suggestion"
                        android:layout_toStartOf="@+id/img_suggest_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Suggestions"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_suggest_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_advertise"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_advert"
                        android:layout_width="25dp"
                        android:layout_height="27dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/advertising" />

                    <TextView
                        android:id="@+id/txt_advert"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/img_advert"
                        android:layout_toStartOf="@+id/img_advert_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Advertising"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_advert_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/contact" />

                    <TextView
                        android:id="@+id/txt_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/img_contact"
                        android:layout_toStartOf="@+id/img_contact_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_contact_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_about"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_about"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="9dp"
                        android:src="@drawable/about" />

                    <TextView
                        android:id="@+id/txt_about"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/img_about"
                        android:layout_toStartOf="@+id/img_about_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="About Us"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_about_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_press"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_press"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="9dp"
                        android:src="@drawable/press" />

                    <TextView
                        android:id="@+id/txt_press"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/img_press"
                        android:layout_toStartOf="@+id/img_press_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Press"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_press_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@color/background_color"/>
                <RelativeLayout
                    android:id="@+id/lay_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_logout"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="9dp"
                        android:src="@drawable/logout" />

                    <TextView
                        android:id="@+id/txt_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/img_logout"
                        android:layout_toStartOf="@+id/img_logout_nxt"
                        android:gravity="start|center"
                        android:padding="4dp"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <ImageView
                        android:id="@+id/img_logout_nxt"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/nxt" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>