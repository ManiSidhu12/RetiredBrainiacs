<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="12dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="12dp">
    <TextView
        android:id="@+id/txt_classifi_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pets &amp; Animals"
        android:gravity="start|center"
        android:textSize="16sp"
        android:padding="3dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/leftarrrow"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/rightarrrow"/>

    </LinearLayout>

</RelativeLayout>
    <ImageView
        android:id="@+id/img_all_post"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/imageclass"
        android:scaleType="fitXY"
        android:layout_marginEnd="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp">
        <TextView
            android:id="@+id/txt_classifi_post_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/txt_classifi_post_time"
            android:layout_marginEnd="5dp"
            android:text="Seniors for seniors"
            android:gravity="start|center"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txt_classifi_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="2dp"
            android:text="23 minutes ago"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="3dp"
     />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_classifi_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:text="PAWS' Seniors for seniors adoption program is open to residents of Washington state"
        android:gravity="start|center"
        android:textSize="14sp"
        android:padding="3dp"
        android:textColor="@android:color/black"/>

</LinearLayout>