<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@android:color/white"
    android:id="@+id/lay_main_all_classify"
    android:layout_marginBottom="12dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="12dp">
    <TextView
        android:id="@+id/txt_classifi_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/lay_pre"
        android:layout_marginEnd="2dp"
        android:text="Pets &amp; Animals"
        android:gravity="start|center"
        android:textSize="16sp"
        android:padding="3dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:id="@+id/lay_pre"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/leftarrrow"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/rightarrrow"/>

    </LinearLayout>

</RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></android.support.v4.view.ViewPager>

</LinearLayout>