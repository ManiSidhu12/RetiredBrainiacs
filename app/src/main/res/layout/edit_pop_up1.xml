<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/dialoglay"
  >
 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:id="@+id/clicklay"
     >
<RelativeLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"

    >


<LinearLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="#F5F5F5">


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/white"
        android:layout_marginTop="12dp">
    <ImageView
        android:id="@+id/img_user_pop"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/img_user_pop"
            android:layout_centerHorizontal="true"
        android:background="#F5F5F5">
        <EditText
            android:id="@+id/edt_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:hint="Post"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:gravity="start|top"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btn_post_pop"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Post"
          android:background="@drawable/login_bg"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"/>
        <LinearLayout
            android:id="@+id/lay_settings_pop"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@+id/btn_post_pop"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_bg"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <Spinner
                android:id="@+id/spin_privacy_pop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
              android:background="@android:color/transparent"  ></Spinner>
            <ImageView
                android:id="@+id/drop"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="center"
                android:tint="@android:color/darker_gray"
                android:src="@drawable/drop"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="#F5F5F5"/>

</LinearLayout>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/close" />

</RelativeLayout>
 </RelativeLayout>
</RelativeLayout>