<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/lay_srch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_srch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:src="@android:drawable/ic_menu_search"/>
            <EditText
                android:id="@+id/edt_srch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/img_srch"
                android:layout_toStartOf="@+id/img_msg"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:hint="Search"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/img_msg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/forum"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FAECE1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/img_ques"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:src="@drawable/status"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_status"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:text="Status"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lay_audio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp">
            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/audio"/>
            <TextView
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_audio"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:text="Add Audio/Video"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lay_image_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/add_img"/>
            <TextView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:text="Add Image"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>
        </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_ques"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ques"/>
    </RelativeLayout>
            <RelativeLayout
                android:id="@+id/attachlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/attach"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="5dp"/>
                <EditText
                    android:id="@+id/edt_post_data1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/attach"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:hint="Write something on this page.."
                    android:textSize="14sp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/add_feed"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/img_feed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="7dp"
            android:src="@drawable/dummyuser"/>
        <EditText
            android:id="@+id/edt_post_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_feed"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="7dp"
            android:background="@android:color/transparent"
            android:hint="Write something on this page.."
            android:textSize="14sp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end">
            <Button
                android:id="@+id/btn_post_feed"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="Post"
                android:background="@drawable/post_bg"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginEnd="5dp"/>

            <LinearLayout
                android:id="@+id/lay_settings_feed"
                android:layout_width="110dp"
                android:layout_height="35dp"
               android:layout_toStartOf="@+id/btn_post_feed"
                android:layout_marginEnd="15dp"
                android:background="@drawable/spin_bg"
                android:layout_centerInParent="true">
                <Spinner
                    android:id="@+id/spin_privacy_feed"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progress_feed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="40dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>