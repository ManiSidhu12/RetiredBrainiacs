<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/forum"
                android:layout_marginEnd="7dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/discoveries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:text="Discoveries iin History"/>
                <TextView
                    android:id="@+id/discoveries_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:text="Modern view on roots of religions and states"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/forum"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/forum"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FAECE1"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/img_status_forum"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/status"/>
                    <TextView
                        android:id="@+id/status_forum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img_status_forum"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="7dp"
                        android:text="Status"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="12dp">
                    <ImageView
                        android:id="@+id/img_forum"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/add_img"/>
                    <TextView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img_forum"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:text="Upload"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/img_feed_forum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="7dp"
                android:src="@drawable/user"/>
            <EditText
                android:id="@+id/edt_forum_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_feed_forum"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="7dp"
                android:background="@android:color/transparent"
                android:hint="Write something on this page.."
                android:textSize="14sp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end">
        <Button
            android:id="@+id/btn_forum_feed"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="Post"
            android:background="@drawable/post_bg"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"/>
        </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_forum_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:orientation="vertical"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>